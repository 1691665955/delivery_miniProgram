/* pages/home/home.wxss */

.location {
  margin-left: 20rpx;
  height: 60rpx;
  width: fit-content;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius: 30rpx;
  background-color: #efefef;
}

.location image {
  margin-left: 20rpx;
  width: 40rpx;
  height: 40rpx;
}

.location view {
  margin-right: 20rpx;
  font-size: 28rpx;
  color: #8a8a8a;
}

.search {
  margin-left: 60rpx;
  margin-top: 20rpx;
  width: 630rpx;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius: 30rpx;
  border: 1rpx solid #6c6c6c;
}

.search image {
  margin-left: 20rpx;
  width: 50rpx;
  height: 50rpx;
}

.search input {
  flex: 1;
  height: 60rpx;
  font-size: 28rpx;
}

.remind {
  margin-top: 30rpx;
  margin-left: 60rpx;
  width: 630rpx;
  height: 60rpx;
  border-radius: 30rpx;
  line-height: 60rpx;
  text-align: center;
  background-color: #4797F8;
  color: #FFFFFF;
  font-size: 28rpx;
}

.swipeable-header {
  margin-top: 30rpx;
  width: 750rrpx !important;
  border: 0rpx !important;
}

.swipeable-class-inactive {
  border-width: 8rpx !important;
}

.swipeable-class-active {
  font-weight: 900 !important;
  font-size: 34rpx !important;
  border-width: 6rpx !important;
}

.line-class {
  width: 50rpx !important;
}

.tab-content {
  height: 100%;
  background-color: #efefef;
}

.place-item {
  margin-left: 40rpx;
  margin-top: 40rpx;
  width: 670rpx;
  height: 140rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #FFFFFF;
  border-radius: 10rpx;
}

.place-item-type-1,
.place-item-type-2 {
  margin-left: 20rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 6rpx;
  line-height: 80rpx;
  text-align: center;
  color: #FFFFFF;
  font-size: 40rpx;
  font-weight: bold;
  font-family: 'Courier New', Courier, monospace;
  background: linear-gradient(to left, #4797F8, #4467F5);
}

.place-item-type-2 {
  background: linear-gradient(to left, #F297F8, #F667F5);
}

.place-item-content {
  margin-left: 20rpx;
  margin-right: 20rpx;
  flex: 1;
}

.place-item-title {
  font-size: 28rpx;
  color: #101010;
}

.place-item-status {
  margin-top: 16rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.place-item-time {
  width: 160rpx;
  height: 40rpx;
  background-color: #efefef;
  border-radius: 20rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 24rpx;
  color: #8a8a8a;
}

.place-item-status {
  font-size: 24rpx;
  color: #8a8a8a;
}

.take-item {
  position: relative;
  margin-left: 40rpx;
  margin-top: 40rpx;
  width: 670rpx;
  display: flex;
  flex-direction: row;
  background-color: #FFFFFF;
  border-radius: 10rpx;
}

.take-item-content {
  margin: 20rpx;
  margin-right: 90rpx;
}

.take-item-title {
  font-size: 28rpx;
  color: #101010;
}

.take-item-desc {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #6c6c6c;
  word-break: break-all;
}

.take-item-time {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #8a8a8a;
}

.take-item-type-1,
.take-item-type-2 {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 60rpx;
  height: 60rpx;
  border-radius: 6rpx;
  line-height: 60rpx;
  text-align: center;
  color: #FFFFFF;
  font-size: 30rpx;
  font-weight: bold;
  font-family: 'Courier New', Courier, monospace;
  background: linear-gradient(to left, #4797F8, #4467F5);
}

.take-item-type-2 {
  background: linear-gradient(to left, #F297F8, #F667F5);
}

.take-item-price {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  font-size: 48rpx;
  color: #dd6130;
}

.rank-item {
  width: 100vw;
  height: 140rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1rpx solid #dddddd;
}

.rank-item image {
  margin-left: 40rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
}

.rank-item-content {
  margin: 20rpx;
  flex: 1;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.rank-item-name {
  font-size: 32rpx;
  color: #101010;
}

.rank-item-total {
  font-size: 36rpx;
  color: #dd6130;
}